#!/bin/bash

# Check if an argument was passed
if [ $# -eq 0 ]; then
  echo "Usage: 5-is_the_host_on_the_network {IP_ADDRESS}"
  exit 1
fi

# Get the IP address from the argument
ip_address=$1

# Ping the IP address 5 times
for i in {1..5}; do
  ping -c 1 $ip_address
done

# Check the ping results
ping_results=$(ping -c 5 $ip_address)

# Display the ping results
echo "Ping results for $ip_address:"
echo "$ping_results"